<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondosi"
    tools:context=".RstaurantesHome">

    <TextView
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:layout_marginBottom="824dp"
        android:fontFamily="casual"
        android:text="restaurantes"

        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/hotelesyturismo"
        android:layout_width="338dp"
        android:layout_height="231dp"
        android:text="@string/resenarestaurantes"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27" />

    <ImageView
        android:id="@+id/logohotel"
        android:layout_width="266dp"
        android:layout_height="208dp"
        android:layout_marginStart="116dp"
        android:src="@drawable/logore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.706" />

    <Button
        android:id="@+id/botonvermasr"
        android:layout_width="164dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="150dp"

        android:layout_marginEnd="160dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/boton_personalizado"
        android:text="Vermas"

        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>